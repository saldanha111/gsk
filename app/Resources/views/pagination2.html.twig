<!-- /Paginacion -->
<div class="row">
  <div class="col-lg-12">
    <ul class="pagination pull-right">
      {% if pagination.page>pagination.size+1 %} 
      <li class="page-item"><a class="page-link anterior {% if 1 == pagination.page %}paginador-active{% endif %}" href="{{pagination.url}}"><i class="fa fa-angle-double-left" aria-hidden="true"></i></a></li>
      {% endif %}
      {% for i in pagination.page-pagination.size..pagination.page+pagination.size %} <!--pagination.lastpage-->
        {% if i==0 %} 
          <li class="page-item"><a  class="page-link {% if i == pagination.page %}paginador-active{% endif %}" href="{{pagination.url}}">1</a></li>
        {% endif %}
        {% if i <= pagination.lastpage and i>1 %} 
          <li class="page-item"><a  class="page-link {% if i == pagination.page+1 %}paginador-active{% endif %}" href="{{pagination.url}}{{pagination.character}}page={{ i }}">{{ i }}</a></li>
        {% endif %}
      {% endfor %}
      {% if pagination.page<pagination.lastpage-pagination.size %} 
      <li class="page-item"><a  class="page-link siguiente {% if pagination.lastpage == pagination.page %}paginador-active{% endif %}" href="{{pagination.url}}{{pagination.character}}page={{ pagination.lastpage }}"><i class="fa fa-angle-double-right" aria-hidden="true"></i></a></li>
      {% endif %}
    </ul>
  </div>
</div>