{% extends '::base.html.twig' %}

{% block page_title %} {{email.subject}} | GSK {% endblock %}

{% block main_title %} Buz√≥n {% endblock %}

{% block breadcrumb %}
<ol class="breadcrumb">
    <li>
        <a href="{{ path('nononsense_home_homepage')}}">Home</a>
    </li>
    <li>
        <a href="{{ path('nononsense_notifications_mails')}}">Mensajes</a>
    </li>
    <li class="active">
        <strong>{{email.subject}}</strong>
    </li>
</ol>
{% endblock %}
{% block content %}


<div class="mail-box-header">
    <div class="mail-tools tooltip-demo m-t-md">
        <h3><span class="font-normal">Asunto: </span>{{email.subject}}</h3>
        <h5>
            <span class="float-right font-normal">{{email.created|date('d-m-y')}}</span>
            <span class="font-normal">De: </span>System
        </h5>
    </div>
</div>
<div class="mail-box">
    <div class="mail-body">
        <p>{{email.body|raw}}</p>
    </div>

    <div class="mail-body text-right tooltip-demo">
        <button title="" data-placement="top" data-toggle="tooltip" type="button" data-original-title="Print" onclick="window.print()" class="btn btn-sm btn-white"><i class="fa fa-print"></i> Imprimir</button>
    </div>
    <div class="clearfix"></div>
</div>
            
           
{% endblock %}