{% extends '::base.html.twig' %}
{% block page_title %}Docoaro - GSK |  Productos / {{productInput.id is not null ? 'Editar' : 'Crear'}} recepción de {{ type is defined ? type.name : ''}} {% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block main_title %} Productos / {{productInput.id is not null ? 'Editar' : 'Crear'}} recepción de {{ type is defined ? type.name : ''}} {% endblock %}

{% block content %}
    <link rel="stylesheet" href="{{ asset('bundles/nononsensehome/css/select2.min.css') }}">
    <div class="wrapper wrapper-content animated fadeInUp">
        {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-danger alert-dismissable" style="margin: 10px 16px 0 16px">
            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
            {{ flashMessage }}
        </div>
        <br>
        {% endfor %}
        <form class="form-horizontal" id="form_item" action="{{ path('nononsense_products_inputs',{'type': type.slug,'qrCode': qrCode}) }}" method="POST">
            <input type="hidden" id='url_get_products_json' value="{{ path('nononsense_products_json') }}" />
            <input type="hidden" name="productId" id='productId' value="{{ product.id }}" />
            <div class="row">
                <div class="col-lg-4 col-lg-offset-1">
                    <div class="row">
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Código QR</label>
                            <div class="col-sm-7">
                                <input type="text" name="qrCode" class="form-control" value="{{ product.qrCode is not null ? product.qrCode : ''}}" readonly="readonly">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Nombre</label>
                            <div class="col-sm-7">
                                <input type="text" name="name" class="form-control" value="{{product.name is not null ? product.name : ''}}" readonly="readonly">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Código interno</label>
                            <div class="col-sm-7">
                                <input type="text" name="internalCode" class="form-control" value="{{product.internalCode is not null ? product.internalCode : ''}}" readonly="readonly">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Part. Number</label>
                            <div class="col-sm-7">
                                <input type="text" name="partNumber" class="form-control" value="{{product.partNumber is not null ? product.partNumber : ''}}" readonly="readonly">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-4 control-label">Proveedor</label>
                            <div class="col-sm-7">
                                <input type="text" name="provider" class="form-control" value="{{product.provider is not null ? product.provider : ''}}" readonly="readonly">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Presentación</label>
                            <div class="col-sm-7">
                                <input type="text" name="presentation" class="form-control" value="{{product.presentation is not null ? product.presentation : ''}}" readonly="readonly">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Stock mínimo</label>
                            <div class="col-sm-7">
                                <input type="text" name="stockMinimum" class="form-control" value="{{product.stockMinimum is not null ? product.stockMinimum : ''}}" readonly="readonly">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Stock actual</label>
                            <div class="col-sm-7">
                                <input type="text" name="stock" class="form-control" value="{{product.stock is not null ? product.stock : ''}}" readonly="readonly">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Fecha recepción</label>
                            <div class="col-sm-7">
                                <input type="text" class="form-control pull-right" readonly="readonly" name="receptionDate"
                                       value="{{ productInput.receptionDate is not null ? productInput.receptionDate|date('d-m-Y') : "now"|date("d/m/Y") }}">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Unidades recibidas</label>
                            <div class="col-sm-7">
                                <input type="text" name="amount" class="form-control" value="{{productInput.amount is not null ? productInput.amount : ''}}" required="required">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Observaciones</label>
                            <div class="col-sm-7">
                                <textarea class="form-control" name="observations" rows="4">{{productInput.observations is not null ? productInput.observations : ''}}</textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-11">
                    <button type="submit" class="btn btn-primary  pull-right"><i class="fa fa-floppy-o" aria-hidden="true"></i> {{productInput.id is not null ? 'Editar' : 'Registrar'}} recepción</button>
                </div>
            </div>
        </form>
    </div>
    
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {
            ActivateMenu('browse_product_inputs');
            $('#side-menu').metisMenu();
        });
    </script>
{% endblock %}


