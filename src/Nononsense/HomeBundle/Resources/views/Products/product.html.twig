{% extends '::base.html.twig' %}
{% block page_title %}DOCXPRESSO |  Productos / {{product is null ? 'Crear' : 'Editar'}} producto {% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block main_title %} Productos / {{product is null ? 'Crear' : 'Editar'}} producto{% endblock %}

{% block content %}

    <div class="wrapper wrapper-content animated fadeInUp">
        {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-danger alert-dismissable" style="margin: 10px 16px 0 16px">
            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
            {{ flashMessage }}
        </div>
        <br>
        {% endfor %}
        <form class="form-horizontal" id="form_item" action="{{ path('nononsense_products_update',{'id': product.id is defined ? product.id : 0}) }}" method="POST">
            <div class="row">
                <div class="col-lg-4 col-lg-offset-1">
                    <div class="row">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Part. Number</label>
                            <div class="col-sm-7">
                                <input type="text" name="partNumber" class="form-control" value="{{product.partNumber is defined ? product.partNumber : ''}}" required="required">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Nombre</label>
                            <div class="col-sm-7">
                                <input type="text" name="name" class="form-control" value="{{product.name is defined ? product.name : ''}}" required="required">
                            </div>
                        </div>  
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Descripción</label>
                            <div class="col-sm-7">
                                <textarea name="description" rows="10" cols="40" required="required">{{product.description is defined ? product.description : ''}}</textarea>
                            </div>
                        </div>  
                        {% if types is defined %}
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Tipo</label>
                                <div class="col-sm-7">
                                  <select class="form-control" name="type" style="width: 100%;" required="required">
                                    <option value=""></option>
                                    {% for type in types %}
                                      <option value="{{type.id}}" {{ product.type.id is defined and product.type.id==type.id ? 'selected="selected"' : ''}}>{{type.name}}</option>
                                    {% endfor %}
                                  </select>
                                </div>
                            </div> 
                        {% endif %}
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Proveedor</label>
                            <div class="col-sm-7">
                                <input type="text" name="provider" class="form-control" value="{{product.provider is defined ? product.provider : ''}}" required="required">
                            </div>
                        </div>  
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Presentación</label>
                            <div class="col-sm-7">
                                <input type="text" name="presentation" class="form-control" value="{{product.presentation is defined ? product.presentation : ''}}" required="required">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Método de análisis</label>
                            <div class="col-sm-7">
                                <input type="text" name="analysisMethod" class="form-control" value="{{product.analysisMethod is defined ? product.analysisMethod : ''}}" required="required">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Stock mínimo</label>
                            <div class="col-sm-7">
                                <input type="text" name="stockMinimum" class="form-control" value="{{product.stockMinimum is defined ? product.stockMinimum : ''}}" required="required">
                            </div>
                        </div>  
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Observaciones</label>
                            <div class="col-sm-7">
                                <textarea name="observations" rows="10" cols="40" required="required">{{product.observations is defined ? product.observations : ''}}</textarea>
                            </div>
                        </div>  
                        
                    </div>          
                </div>
            </div>

            <div class="row">
                <div class="col-sm-11">
                    <button type="submit" class="btn btn-primary  pull-right"><i class="fa fa-floppy-o" aria-hidden="true"></i> Guardar</button>
                </div>
            </div>
        </form>
    </div>
    
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script>

    $( document ).ready(function() {
        ActivateMenu('browse_products');
        $('#side-menu').metisMenu();
    });
    </script>
{% endblock %}


