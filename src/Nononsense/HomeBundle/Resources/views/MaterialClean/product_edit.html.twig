{% extends '::base.html.twig' %}
{% block page_title %}Docoaro - GSK |  productos / {{product.id is not null ? 'Editar' : 'Crear'}} producto {% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block main_title %} Productos / {{product.id is not null ? 'Editar' : 'Crear'}} producto{% endblock %}

{% block content %}

    <div class="wrapper wrapper-content animated fadeInUp">
        {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-danger alert-dismissable" style="margin: 10px 16px 0 16px">
            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
            {{ flashMessage }}
        </div>
        <br>
        {% endfor %}
        <form class="form-horizontal" id="form_item" action="{{ path('nononsense_mclean_products_edit',{'id': product.id is not null ? product.id : 0}) }}" method="POST">
            <div class="row">
                <div class="col-lg-4 col-lg-offset-1">
                    <div class="row">
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Nombre</label>
                            <div class="col-sm-7">
                                <input type="text" name="name" class="form-control" value="{{product.name is not null ? product.name : ''}}" required="required">
                            </div>
                        </div>  
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Número de etiquetas</label>
                            <div class="col-sm-7">
                                <input type="text" name="tags_number" class="form-control" value="{{product.tagsNumber is not null ? product.tagsNumber : ''}}" required="required">
                            </div>
                        </div>  
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Activo</label>
                            <div class="col-sm-7">
                                <input name="active" value="1" type="checkbox" {% if product.active == true %} checked="checked" {% endif %}>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-11">
                    <button type="submit" class="btn btn-primary  pull-right"><i class="fa fa-floppy-o" aria-hidden="true"></i> {{product.id is not null ? 'Editar' : 'Registrar'}} producto</button>
                </div>
            </div>

        </form>
    </div>
    
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script>

    $( document ).ready(function() {
        ActivateMenu('admin_products');
        $('#side-menu').metisMenu();
    });
    </script>
{% endblock %}


