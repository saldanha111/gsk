{% extends '::base.html.twig' %}
{% block page_title %}Docoaro - GSK | {{'Homepage'|trans}} {% endblock %}
{% block head %}
{{ parent() }}
{% endblock %}
{% block main_title %} Plantillas {% endblock %}
{% block content %}

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-sm-12">
            <div>
                <div>

                    {% for flashMessage in app.session.flashbag.get('message') %}
                        <div class="alert alert-success alert-dismissable" style="margin: 10px 16px 0 16px">
                            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                            {{ flashMessage }}
                        </div><br>
                    {% endfor %}
                    {% for flashMessage in app.session.flashbag.get('error') %}
                        <div class="alert alert-danger alert-dismissable" style="margin: 10px 16px 0 16px">
                            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                            {{ flashMessage }}
                        </div><br>
                    {% endfor %}
                    <form class="form-horizontal" id="form_item" action="{{ path('nononsense_tm_templates')}}" method="GET">
                        <div class="row">

                            <label class="col-sm-1 control-label item_filter">Título</label>
                            <div class="col-sm-2 item_filter">
                                <input type="text" name="name" class="form-control" value="{{filters.name is defined ? filters.name : ''}}">
                            </div>

                            <label class="col-sm-1 control-label item_filter">Código</label>
                            <div class="col-sm-2 item_filter">
                                <input type="text" name="number" class="form-control" value="{{filters.number is defined ? filters.number : ''}}">
                            </div>

                            {% if areas is defined %}
                                <label class="col-sm-1 control-label item_filter">Area</label>
                                <div class="col-sm-2 item_filter">
                                  <select class="form-control" style="width: 100%;" name="area">
                                    <option value=""></option>
                                    {% for area in areas %}
                                      <option value="{{area.id}}" {{ filters.area is defined and filters.area==area.id ? 'selected="selected"' : ''}}>{{area.name}}</option>
                                    {% endfor %}
                                  </select>
                                </div>
                            {% endif %}

                            

                            

                            
                        </div><br>
                        <div class="row">  
                            {% if not extend %}
                                <label class="col-sm-1 control-label item_filter">Ordenar por</label>
                                <div class="col-sm-2 item_filter">
                                  <select class="form-control" style="width: 100%;" name="order">
                                    <option value="" {{filters.order is defined and filters.order is empty ? 'selected="selected"'}}>Más Recientes</option>
                                    <option value="2" {{filters.order is defined and filters.order == 2 ? 'selected="selected"'}}>Más usadas</option>
                                  </select>
                                </div>
                                <div class="col-sm-1 item_filter">
                                    <button type="submit" class="btn btn-primary">Filtrar</button>
                                </div>
                            {% endif %}

                            {% if users is defined and extend %}
                                <label class="col-sm-1 control-label item_filter">Solicitante</label>
                                <div class="col-sm-2 item_filter">
                                  <select class="form-control" style="width: 100%;" name="applicant">
                                    <option value=""></option>
                                    {% for user in users %}
                                      <option value="{{user.id}}" {{ filters.applicant is defined and filters.applicant==user.id ? 'selected="selected"' : ''}}>{{user.name}}</option>
                                    {% endfor %}
                                  </select>
                                </div>
                            {% endif %}

                            {% if users is defined and extend %}
                                <label class="col-sm-1 control-label item_filter">Dueño</label>
                                <div class="col-sm-2 item_filter">
                                  <select class="form-control" style="width: 100%;" name="owner">
                                    <option value=""></option>
                                    {% for user in users %}
                                      <option value="{{user.id}}" {{ filters.owner is defined and filters.owner==user.id ? 'selected="selected"' : ''}}>{{user.name}}</option>
                                    {% endfor %}
                                  </select>
                                </div>
                            {% endif %}

                            {% if users is defined and extend %}
                                <label class="col-sm-1 control-label item_filter">Backup</label>
                                <div class="col-sm-2 item_filter">
                                  <select class="form-control" style="width: 100%;" name="backup">
                                    <option value=""></option>
                                    {% for user in users %}
                                      <option value="{{user.id}}" {{ filters.backup is defined and filters.backup==user.id ? 'selected="selected"' : ''}}>{{user.name}}</option>
                                    {% endfor %}
                                  </select>
                                </div>
                            {% endif %}
                        </div><br>
                        {% if extend %}
                            <div class="row">
                                {% if states is defined %}
                                    <label class="col-sm-1 control-label item_filter">Estado</label>
                                    <div class="col-sm-2 item_filter">
                                      <select class="form-control" style="width: 100%;" name="state">
                                        <option value=""></option>
                                        {% for state in states %}
                                            {% if state.id != 9 %}
                                                <option value="{{state.id}}" {{ filters.state is defined and filters.state==state.id ? 'selected="selected"' : ''}}>{{state.name}}</option>
                                            {% endif %}
                                        {% endfor %}
                                      </select>
                                    </div>
                                {% endif %}

                                <div class="col-sm-1">
                                  <div class="checkbox">
                                    <label>
                                      <input name="draft" value="1" type="checkbox" {% if filters.draft is defined and  filters.draft == true %} checked="checked" {% endif %}> DRAFT
                                    </label>
                                  </div>
                                </div>

                                <div class="col-sm-1">
                                  <div class="checkbox">
                                    <label>
                                      <input name="pending_for_me" value="1" type="checkbox" {% if filters.pending_for_me is defined and  filters.pending_for_me == true %} checked="checked" {% endif %}> Mis Reg. Pend.
                                    </label>
                                  </div>
                                </div>

                                <div class="col-sm-4 item_filter">
                                    <button type="submit" class="btn btn-primary">Filtrar</button>
                                </div>
                            </div>
                        {% else %}
                            <input type="hidden" name="state" value="{{filters.state is defined ? filters.state : ''}}">
                        {% endif %}
                        <input type="hidden" name="cumpl" value="{{filters.cumpl is defined and filters.cumpl == 1 ? '1' : ''}}">
                      </form>
                </div>
                <br>
                <div class="row">
                    <table id="inProcessParcial" class="table table-striped">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Código</th>
                            <th>Ed.</th>
                            <th>Título</th>
                            <th>Area</th>
                            {% if extend %}
                                <th>Solicitante</th>
                            {% endif %}
                            <th>F.efectiva</th>
                            <th>F.revisión</th>
                            {% if extend %}
                                <th>Dueño</th>
                                <th>Backup</th>
                            {% endif %}
                            <th>Norma.ref</th>
                            {% if extend %}
                                <th>Estado</th>
                                <th>Inactiva</th>
                            {% endif %}
                            <th></th>
                            {% if extend %}
                                <th></th>
                            {% endif %}
                            <th></th>
                            <th></th>
                        </tr>
                        </thead>
                        {% if items is defined %}
                            {% for item in items %}
                            <tr>
                                <td>{{item.id}}</td>
                                <td>{{item.number}}</td>
                                <td>{{item.numEdition}}</td>
                                <td><a href="{{path('nononsense_tm_template_detail', {'id': item.id}) }}">{{item.name}}</a></td>
                                <td>{{item.nameArea}}</td>
                                {% if extend %}
                                    <td>{{item.applicantName}}</td>
                                {% endif %}
                                <td>{{item.effectiveDate is defined and item.effectiveDate is not null ? item.effectiveDate|date("d/m/Y")|gskdate : ''}}</td>
                                <td>{{item.dateReview is defined and item.dateReview is not null ? item.dateReview|date("d/m/Y")|gskdate : ''}}</td>
                                {% if extend %}
                                    <td>{{item.ownerName}}</td>
                                    <td>{{item.backupName}}</td>
                                {% endif %}
                                <td>{{item.reference}}</td>
                                {% if extend %}
                                    <td>{{item.stateName}}</td>
                                    <td>{{item.inactive is defined and item.inactive  ? 'Si' : 'No'}}</td>
                                {% endif %}
                                <td>
                                    <div class="btn-group btn-xs">
                                        <button type="button" class="btn btn-xs btn-primary" data-toggle="dropdown"><i class="fa fa-ellipsis-h"></i></button>
                                        <button type="button" class="btn btn-xs btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                          <span class="caret"></span>
                                          <span class="sr-only">Toggle Dropdown</span>
                                        </button>
                                        <ul class="dropdown-menu" role="menu">
                                            {% if extend %}
                                                {% if item.status == 6 %}
                                                    <li><a href="{{path('nononsense_tm_request')}}?id={{item.id}}"><i class="fa fa-recycle"></i> {{ 'Nueva edición'|trans }}</a></li>
                                                {% endif %}
                                            {% endif %}
                                            <li><a href="{{path('nononsense_tm_template_changes_history', {'id': item.id})}}"><i class="fa fa-file-text-o"></i> {{ ' Historial de cambios'|trans }}</a></li>
                                            {% if extend %}
                                                <li><a href="{{path('nononsense_tm_template_audit_trail', {'id': item.id})}}"><i class="fa fa-book"></i> {{ 'Audit Trail'|trans }}</a></li>
                                                <li><a href="{{path('nononsense_tm_template_cover_page', {'id': item.id})}}"><i class="fa fa-print"></i> {{ 'Imprimir plantilla'|trans }}</a></li>
                                                {% if item is defined and item.status==6 and (item.ownerId==app.user.id or item.backupId==app.user.id ) %}
                                                    <li><a href="{{path('nononsense_tm_template_detail', {'id': item.id})}}?request_drop=1"><i class="fa fa-thumbs-o-down"></i> {{ 'Solicitar baja'|trans }}</a></li>
                                                {% endif %}

                                                {% if item is defined and item.status==6 and (item.dateReview is empty or item.dateReview|date > date()) %}
                                                    <li><a href="{{path('nononsense_tm_template_detail', {'id': item.id})}}?request_review=1"><i class="fa fa-eye"></i> {{ 'Solicitar revisión'|trans }}</a></li>
                                                {% endif %}
                                            {% endif %}
                                        </ul>
                                    </div>
                                </td>
                                {% if extend %}
                                    <td>
                                        {% if item.require_action %}
                                            {% if item.status == 1 %}
                                                <a class="btn btn-xs btn-danger" href="{{path('nononsense_tm_template_detail', {'id': item.id}) }}" target="_self"><i class="fa fa-gavel" aria-hidden="true"></i> {{'Consultar solicitud'|trans}}</a>
                                            {% endif %}

                                            {% if item.status == 2 %}
                                                <a class="btn btn-xs btn-danger" href="{{path('nononsense_tm_elaborate_detail', {'id': item.id}) }}" target="_self"><i class="fa fa-scissors" aria-hidden="true"></i> {{'Elaborar'|trans}}</a>
                                            {% endif %}

                                            {% if item.status == 3 %}
                                                <a class="btn btn-xs btn-danger" href="{{path('nononsense_tm_test_detail', {'id': item.id}) }}" target="_self"><i class="fa fa-flask" aria-hidden="true"></i> {{'Testear'|trans}}</a>
                                            {% endif %}

                                            {% if item.status == 4 %}
                                                <a class="btn btn-xs btn-danger" href="{{path('nononsense_tm_aprob_detail', {'id': item.id}) }}" target="_self"><i class="fa fa-check" aria-hidden="true"></i> {{'Aprobar'|trans}}</a>
                                            {% endif %}

                                            {% if item.status == 5 %}
                                                <a class="btn btn-xs btn-danger" href="{{path('nononsense_tm_config_detail', {'id': item.id}) }}" target="_self"><i class="fa fa-gear" aria-hidden="true"></i> {{'Configurar'|trans}}</a>
                                            {% endif %}

                                            {% if item.status == 9 %}
                                                <a class="btn btn-xs btn-danger" href="{{path('nononsense_tm_elaborate_detail_cancel', {'id': item.id}) }}" target="_self"><i class="fa fa-scissors" aria-hidden="true"></i> {{'Tramitar cancelación'|trans}}</a>
                                            {% endif %}


                                            {% if item.status == 11 %}
                                                <a class="btn btn-xs btn-danger" href="{{path('nononsense_tm_config_detail', {'id': item.id}) }}" target="_self"><i class="fa fa-gear" aria-hidden="true"></i> {{'Modificar configuración'|trans}}</a>
                                            {% endif %}
                                        {% endif %}
                                        
                                        {% if item.status == 6 %}
                                            <a class="btn btn-xs btn-primary" href="{{path('nononsense_tm_config_detail', {'id': item.id}) }}" target="_self"><i class="fa fa-thumbs-o-up" aria-hidden="true"></i> {{'En vigor'|trans}}</a>
                                        {% endif %}

                                        {% if item.status == 7 %}
                                            <a class="btn btn-xs btn-default disabled" href="#" target="_self"><i class="fa fa-ban" aria-hidden="true"></i> {{'Obsoleta'|trans}}</a>
                                        {% endif %}

                                        {% if item.status == 14 %}
                                            <a class="btn btn-xs btn-default disabled" href="#" target="_self"><i class="fa fa-remove" aria-hidden="true"></i> {{'Cancelada'|trans}}</a>
                                        {% endif %}
                                    </td>
                                {% endif %}
                                
                                <td>
                                    {% if item.status == 6 and not item.inactive and not item.notFillableItSelf %}
                                        <a class="btn btn-xs btn-danger" href="{{path('nononsense_cv_new', {'template': item.id, 'id':0})}}" target="_self"><i class="fa fa-pencil" aria-hidden="true"></i> {{'Iniciar cumpl.'|trans}}</a>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if item.needNewEdition is defined and item.needNewEdition is not empty and item.status == 6 %}
                                        <a href="{{path('nononsense_tm_request')}}?id={{item.id}}" class="btn btn-xs btn-warning" data-toggle="tooltip" data-placement="left" title="Es necesario crear una nueva edición de esta plantilla tras la última revisión"><i class="fa fa-warning"></i></a>
                                    {% endif %}
                                </td>
                            </tr>
                            {% endfor %}
                        {% endif %}
                    </table>
                    {% if count==0 %}
                        <br><b>No se han encontrado plantillas disponibles</b>
                    {% endif %}
                    {% if pagination is defined and pagination.needed %}
                        {% include '::pagination2.html.twig' %}
                    {% endif %}

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
{% block scripts %}
{{ parent() }}
<script>
$( document ).ready(function() {
    $('[data-toggle="tooltip"]').tooltip();
    {% if filters.state is defined %}
        {% if filters.state==1 %}
            ActivateMenu('solicitudes_gestion_plantillas');
        {% elseif filters.state==2 %}
            ActivateMenu('elaboracion_gestion_plantillas');
        {% elseif filters.state==3 %}
            ActivateMenu('test_gestion_plantillas');
        {% elseif filters.state==4 %}
            ActivateMenu('aprobacion_gestion_plantillas');
        {% elseif filters.state==5 %}
            ActivateMenu('pendientes_gestion_plantillas');
        {% elseif filters.state==11 %}
            ActivateMenu('pendientes_vigor_gestion_plantillas');
        {% elseif filters.state==6 %}
            {% if extend %}
                ActivateMenu('en_vigor_gestion_plantillas');
            {% else %}   
                ActivateMenu('docxpresso_nuevo');
            {% endif %} 
        {% endif %}
    {% endif %}
    $('#side-menu').metisMenu();
});
</script>
{% endblock %}
