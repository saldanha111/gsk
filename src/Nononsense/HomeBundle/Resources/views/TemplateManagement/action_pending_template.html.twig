<div class="row">
    <div class="col-lg-10 col-lg-offset-1">
        <div id="signature-pad" class="input-group">
                <h2>Introduzca su firma</h2>
                <canvas width="300" height="150" style="touch-action: none; border: 2px solid #eee; box-shadow: 0px 0px 6px 1px rgba(80, 90, 100, 0.5)"></canvas>
            </div>
            <form id="form_action_pending" action="{{path('nononsense_tm_template_action_pending', {'id': template.id}) }}" method="POST"  enctype="multipart/form-data">
                <input type="hidden" id="signature" name="signature" />
                <a name="borrarFirmar" class="btn btn-secondary" id="borrarFirmar">Limpiar firma</a>
                <a id="cancelRequest" class="btn btn-danger">Rechazar solicitud</a>
                <a id="saveRequest" class="btn btn-success">Aprobar solicitud</a>
                <input type="hidden" name="action" value="">
            </form>
        </div>
    </div>
</div>