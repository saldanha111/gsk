{% extends '::base.html.twig' %}
{% block page_title %}Docoaro - GSK | {{'Homepage'|trans}} {% endblock %}
{% block head %}
{{ parent() }}
<style>
</style>
{% endblock %}
{% block main_title %} Se va a proceder a firmar el contrato {{record.contract.name}}{% endblock %}
{% block content %}
<div class="wrapper wrapper-content">
    {% for flashMessage in app.session.flashbag.get('error') %}
    <div class="alert alert-danger alert-dismissable" style="margin: 10px 16px 0 16px">
        <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
        {{ flashMessage }}
    </div>
    {% endfor %}
    <div class="row">
        <div>
            <div class="col-sm-5 ">
                <h1>Firma de Contrato</h1>
                <form id="signForm" class="form-horizontal" action="{{path('nononsense_record_contracts_sign', {'id': record.id})}}" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <div class="col-xs-12">
                            <label for="signaturefile"> Archivo del certificado (.p12): </label>
                        </div>
                        <div class="col-xs-12">
                            <input id="signaturefile" type="file" name="signaturefile" accept=".p12">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <label for="signaturepass"> Contraseña: </label>
                        </div>
                        <div class="col-xs-12">
                            <input id="signaturepass" type="password" name="signaturepass">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <a href="#" class="btn btn-secondary btn-confirm">Firmar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <hr>
    </div>
</div>
{% endblock %}
{% block scripts %}
{{ parent() }}
<script>
    $(document).ready(function () {

        toastr.options = {
            "closeButton": true,
            "debug": false,
            "progressBar": true,
            "positionClass": "toast-top-center",
            "onclick": null,
            "showDuration": "400",
            "hideDuration": "1000",
            "timeOut": "7000",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }

        ActivateMenu('docxpresso_home');
        $('#side-menu').metisMenu();

        $(document).on('click', '.btn-confirm', function (e) {
            e.preventDefault();
            if(!checkSignatureFile() || !checkSignaturePass()){
                toastr.error("Debe seleccionar un archivo con el certificado y su contraseña",'aviso');
            }else{
                $("#signForm").submit();
            }
        });
    });

    function checkSignatureFile()
    {
        return !($('#signaturefile').val() === '');
    }

    function checkSignaturePass()
    {
        return !($('#signaturepass').val() === '');
    }
</script>
{% endblock %}
