{% extends '::base.html.twig' %}
{% block page_title %}DOCXPRESSO | Documentos/Contratos {% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block main_title %} Documentos/Contratos {% endblock %}

{% block content %}

    <div class="wrapper wrapper-content animated fadeInUp">
        <form class="form-horizontal" id="form_item" action="#" method="POST">
            <div class="row">
                <div class="col-lg-4 col-lg-offset-1">
                    <div class="row">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Nombre</label>
                            <div class="col-sm-7">
                                <input type="text" name="name" class="form-control" value="{{item.name is defined ? item.name : ''}}" required="required">
                            </div>
                        </div>  

                        {% if types is defined %}
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Tipo</label>
                                <div class="col-sm-7">
                                  <select class="form-control" {% if item.plantilla_id is defined %} readonly="readonly" {% else %} name="type" {% endif %} style="width: 100%;" required="required">
                                    <option value=""></option>
                                    {% for type in types %}
                                      <option value="{{type.id}}" {{ item.type.id is defined and item.type.id==type.id ? 'selected="selected"' : ''}}>{{type.name}}</option>
                                    {% endfor %}
                                  </select>
                                </div>
                            </div> 
                        {% endif %}

                        <div class="form-group">
                            <label class="col-sm-3 control-label">ID. Plantilla</label>
                            <div class="col-sm-7">
                                <input type="number" {% if item.plantilla_id is defined %} readonly="readonly" {% else %} name="plantilla_id" {% endif %} class="form-control" value="{{item.plantilla_id is defined ? item.plantilla_id : ''}}"  required="required">
                            </div>
                        </div>   
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Descripción</label>
                            <div class="col-sm-7">
                                <textarea name="description" rows="10" cols="40" required="required">{{item.description is defined ? item.description : ''}}</textarea>
                            </div>
                        </div>  
                        
                        <div class="form-group">
                            <div class="col-sm-7 col-sm-offset-3">
                                <div class="checkbox">
                                    <label>
                                        <input id="sign_creator" name="sign_creator" value="1" type="checkbox" {% if item.sign_creator is not defined or (item.sign_creator is defined and  item.sign_creator == true) %} checked="checked" {% endif %}> Firma del creador
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group" id="div_attachment" {% if item.sign_creator is not defined or (item.sign_creator is defined and  item.sign_creator == true) %} style="display:block"{% else %} style="display:none"{% endif %}>
                            <div class="col-sm-7 col-sm-offset-3">
                                <div class="checkbox">
                                    <label>
                                        <input name="attachment" id="attachment" value="1" type="checkbox" {% if item.attachment is defined and  item.attachment == true %} checked="checked" {% endif %}> Anexo
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-7 col-sm-offset-3">
                                <div class="checkbox">
                                    <label>
                                        <input name="is_active" value="1" type="checkbox" {% if item.is_active is not defined or (item.is_active is defined and  item.is_active == true) %} checked="checked" {% endif %}> Activo
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>          
                </div>

                <div class="col-lg-6">
                    <h1>Workflow</h1>
                    <hr>
                    {% if baseSignatures is defined %}
                        {% for baseSignature in baseSignatures %}
                            <div class="row">
                                <div class="form-group">
                                    <div class="col-sm-3">
                                        <select class="form-control" style="width: 100%;">
                                            <option value="1" {% if baseSignature.groupid is defined and baseSignature.groupid is not empty %} selected="selected" {% endif %}>Grupo</option>
                                            <option value="2" {% if baseSignature.userid is defined and baseSignature.userid is not empty %} selected="selected" {% endif %}>Usuario</option>
                                        </select>
                                    </div>
                                    {% if baseSignature.groupid is defined and baseSignature.groupid is not empty %}
                                        <div class="col-sm-3">
                                            <select class="form-control" name="groups[]" style="width: 100%;" required="required">
                                                <option value=""></option>
                                                {% for group in groups %}
                                                    <option value="{{group.id}}" {{ baseSignature.groupid==group.id ? 'selected="selected"' : ''}}>{{group.name}}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                        <div class="col-sm-4">
                                            <input type="email" name="email[]" class="form-control" value="{{baseSignature.email is defined ? baseSignature.email : ''}}" required="required" placeholder="Email">
                                        </div>


                                    {% else %} 
                                        <div class="col-sm-3">
                                            <select class="form-control" name="users[]" style="width: 100%;" required="required">
                                                <option value=""></option>
                                                {% for user in users %}
                                                    <option value="{{user.id}}" {{ baseSignature.user==user.id ? 'selected="selected"' : ''}}>{{user.name}}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    {% endif %} 

                                    <div class="col-sm-1">
                                        <div class="checkbox">
                                            <label>
                                                <input name="attachment_wf[]" value="1" type="checkbox" {% if baseSignature.attachment==1 %} checked="checked" {% endif %}> Anexo
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>  
                        {% endfor %}
                    {% endif %}
                    <div class="row">
                        <button type="button" class="btn btn-default pull-right"><i class="fa fa-plus"></i> Añadir</button>
                    </div><br>
                     
                </div>
            </div>
            <div class="row">
                <div class="col-sm-11">
                    <button type="submit" class="btn btn-primary  pull-right"><i class="fa fa-floppy-o" aria-hidden="true"></i> Guardar</button>
                </div>
            </div>
        </form>
    </div>
    
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script>
    $( document ).ready(function() {
        $('#sign_creator').change(function () {
            anexo($(this));
        });

        function anexo(thisObj){
            $('#attachment').prop("checked", false);
            if (thisObj.is(':checked')) {
               $('#div_attachment').show();
            }
            else{
                $('#div_attachment').hide();
            }
        }

        if ($('#sign_creator').is(':checked')) {
           $('#div_attachment').show();
        }
        else{
            $('#div_attachment').hide();
        }
    });
    </script>
{% endblock %}


