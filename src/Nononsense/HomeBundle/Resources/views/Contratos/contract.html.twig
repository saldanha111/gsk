{% extends '::base.html.twig' %}
{% block page_title %}Docoaro - GSK | Contratos {% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block main_title %} Contratos {% endblock %}

{% block content %}

    <div class="wrapper wrapper-content animated fadeInUp">
        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="alert alert-danger alert-dismissable" style="margin: 10px 16px 0 16px">
                <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                {{ flashMessage }}
            </div>
            <br/>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('message') %}
            <div class="alert alert-success alert-dismissable" style="margin: 10px 16px 0 16px">
                <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
                {{ flashMessage }}
            </div>
            <br>
        {% endfor %}
        <form class="form-horizontal" id="form_item" method="POST" enctype="multipart/form-data"
              action="{{ path('nononsense_contracts_update',{'id': item.id is defined and item.id is not null ? item.id : 0}) }}">
            <div class="row">
                <div class="col-lg-4 col-lg-offset-1">
                    <div class="row">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Nombre</label>
                            <div class="col-sm-7">
                                <input type="text" name="name" class="form-control" value="{{item.name is defined ? item.name : ''}}" required="required">
                            </div>
                        </div>
                        {% if canUpdate is defined and canUpdate %}
                            {% if item.id is defined %}
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Versión</label>
                                    <div class="col-sm-7">
                                        <input type="text" name="template_name" class="form-control" value="">
                                    </div>
                                </div>
                            {% endif %}
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Plantilla</label>
                                <div class="col-sm-2">
                                    <input type='file' name="template" id="template" />
                                </div>
                            </div>
                        {% endif %}
                        {% if apiTemplate is defined and apiTemplate.name is defined %}
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Versión</label>
                                <label class="col-sm-7">{{apiTemplate.version.name}}</label>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label">Configuración</label>
                                <label class="col-sm-7">{{apiTemplate.version.configuration.name}}</label>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-6 col-sm-offset-3">
                                    <a class="btn btn-xs btn-info pull-left" href="{{apiTemplate.configurationUrl}}" target="_blank" style="margin-right:2px">Configuración</a>
                                </div>
                            </div>
                        {% endif %}
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Descripción</label>
                            <div class="col-sm-7">
                                <textarea name="description" rows="10" cols="40" required="required">{{item.description is defined ? item.description : ''}}</textarea>
                            </div>
                        </div>  
                        
                        <div class="form-group">
                            <div class="col-sm-7 col-sm-offset-3">
                                <div class="checkbox">
                                    <label>
                                        <input name="is_active" value="1" type="checkbox" {% if item is not defined or (item.isActive is defined and  item.isActive == 1) %} checked="checked" {% endif %}> Activo
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>          
                </div>
            </div>
            <div class="row">
                <div class="col-sm-11">
                    <button type="submit" class="btn btn-primary  pull-right"><i class="fa fa-floppy-o" aria-hidden="true"></i> Guardar</button>
                </div>
            </div>
        </form>
    </div>
    
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script>
    $( document ).ready(function() {

        ActivateMenu('li_plantillas_contratos');
        $('#side-menu').metisMenu();

    });
    </script>
{% endblock %}


